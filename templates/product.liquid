<section class="product-page">

  {% assign initial_variant = product.selected_or_first_available_variant %}
  {% assign max_thumbs = 5 %}

  <!-- LEFT COLUMN -->
  <div class="product-gallery">

    <div class="product-gallery-side" id="SideThumbs">
      {% for media in product.media %}
        {% if forloop.index0 < max_thumbs %}
          <button
            type="button"
            class="product-thumb{% if forloop.first %} is-active{% endif %}"
            data-media-src="{{ media | image_url: width: 1200 }}">
            <img src="{{ media | image_url: width: 120 }}">
          </button>
        {% endif %}
      {% endfor %}

      {% if product.media.size > max_thumbs %}
        <button class="product-thumb product-thumb-more">+{{ product.media.size | minus: max_thumbs }}</button>
      {% endif %}
    </div>

    <!-- MAIN IMAGE -->
    <div class="product-gallery-main">
      <img id="MainImage" class="product-main-image"
           src="{{ initial_variant.featured_media | default: product.media.first | image_url: width: 1200 }}">
    </div>

  </div>



  <!-- MIDDLE CONTENT -->
  <div class="product-main-info">

    <h1 class="product-title">{{ product.title }}</h1>

    <div class="product-price-main" id="PriceMain">
      {{ initial_variant.price | money }}
    </div>

    {% assign option_count = product.options_with_values.size %}
    <div class="product-selector">

      {% if option_count >= 1 %}
        {% assign color_opt = product.options_with_values[0] %}

        <div class="selector-block">
          <div class="selector-label-row">
            Color: <span id="SelectedColor">{{ color_opt.selected_value }}</span>
          </div>

          <div class="color-swatch-grid">
            {% for value in color_opt.values %}
              {% assign swatch = blank %}
              {% for v in product.variants %}
                {% if v.option1 == value and v.featured_media %}
                  {% assign swatch = v.featured_media.preview_image.src %}
                {% endif %}
              {% endfor %}

              <button
                class="color-swatch{% if color_opt.selected_value == value %} is-active{% endif %}"
                data-option-value="{{ value }}">
                {% if swatch %}
                  <img src="{{ swatch | img_url: '120x' }}">
                {% endif %}
                <span>{{ value }}</span>
              </button>

            {% endfor %}
          </div>
        </div>
      {% endif %}


      {% if option_count >= 2 %}
        {% assign size_opt = product.options_with_values[1] %}

        <div class="selector-block">
          <div class="selector-label-row">
            Size: <span id="SelectedSize">{{ size_opt.selected_value }}</span>
            <button id="SizeChartButton" class="size-chart-link">Size chart</button>
          </div>

          <div class="size-pill-grid">
            {% for value in size_opt.values %}
              <button class="size-pill{% if size_opt.selected_value == value %} is-active{% endif %}"
                      data-option-value="{{ value }}">
                {{ value }}
              </button>
            {% endfor %}
          </div>
        </div>

      {% endif %}

    </div>

    <div class="product-details-section">
      <h3>Product details</h3>
      <div class="product-details-content">{{ product.description | strip_html }}</div>
    </div>

  </div>



  <!-- RIGHT BUY BOX -->
  <div class="product-buy-box">

    <div class="buy-box-price" id="BuyBoxPrice">
      {{ initial_variant.price | money }}
    </div>

    <div id="StockBox" class="buy-box-stock">
      {% if initial_variant.inventory_policy == 'continue' or initial_variant.inventory_quantity > 0 %}
        In stock
      {% else %}
        Out of stock
      {% endif %}
    </div>

    {% form 'product', product, id: 'ProductForm' %}
      <input type="hidden" name="id" id="VariantIdInput" value="{{ initial_variant.id }}">

      <div class="buy-box-quantity">
        <label>Quantity:</label>
        <select id="QtySelect" name="quantity"></select>
      </div>

      <div class="buy-box-actions">
        <button class="btn btn-primary" type="submit">Add to Cart</button>
        <button class="btn btn-outline" id="BuyNowBtn" type="button">Buy Now</button>
      </div>
    {% endform %}

  </div>

</section>



<!-- POPUP GALLERY -->
<div class="image-gallery-modal" id="ImageGalleryModal">
  <div class="image-gallery-backdrop"></div>

  <div class="image-gallery-content gallery-popup-layout">

    <button id="ImageGalleryClose" class="image-gallery-close">×</button>

    <div class="popup-main-wrapper">
      <img id="PopupMainImage" class="popup-main-img" src="">
    </div>

    <div class="popup-grid" id="PopupThumbs"></div>

  </div>
</div>



<!-- SIZE CHART -->
<div class="size-chart-modal" id="SizeChartModal">
  <div class="size-chart-backdrop"></div>
  <div class="size-chart-content">
    <button id="SizeChartClose" class="size-chart-close">×</button>

    <h3>Size Chart</h3>

    <div class="size-chart-grid">
      <table>
        <tr><th>Size</th><th>Bust</th><th>Length</th><th>Sleeve</th></tr>
        <tr><td>S</td><td>34–35</td><td>25</td><td>22</td></tr>
        <tr><td>M</td><td>36–37</td><td>25.5</td><td>22.5</td></tr>
        <tr><td>L</td><td>38–40</td><td>26</td><td>23</td></tr>
        <tr><td>XL</td><td>41–43</td><td>26.5</td><td>23.5</td></tr>
        <tr><td>XXL</td><td>44–46</td><td>27</td><td>24</td></tr>
      </table>
    </div>

  </div>
</div>



<script>
document.addEventListener("DOMContentLoaded", function() {

  const product = {{ product | json }};
  let currentVariant = product.selected_or_first_available_variant;
  let selectedOptions = [...currentVariant.options];

  const mainImg = document.getElementById("MainImage");
  const variantIdInput = document.getElementById("VariantIdInput");

  /* POPUP GALLERY */
  const popup = document.getElementById("ImageGalleryModal");
  const popupClose = document.getElementById("ImageGalleryClose");
  const popupBackdrop = document.querySelector(".image-gallery-backdrop");
  const popupMain = document.getElementById("PopupMainImage");
  const popupThumbs = document.getElementById("PopupThumbs");

  function clean(url){ return url.split("?")[0]; }

  function setupThumbs(){
    document.querySelectorAll(".product-thumb").forEach(btn => {
      if(btn.classList.contains("product-thumb-more")){
        btn.onclick = openPopup;
        return;
      }
      btn.onclick = () => {
        mainImg.src = clean(btn.dataset.mediaSrc);
        document.querySelectorAll(".product-thumb").forEach(x=>x.classList.remove("is-active"));
        btn.classList.add("is-active");
      }
    });
  }
  setupThumbs();

  function openPopup(){
    popupThumbs.innerHTML = "";
    popupMain.src = clean(product.media[0].src);

    product.media.forEach(m => {
      const img = document.createElement("img");
      img.src = clean(m.src);
      img.onclick = () => popupMain.src = clean(m.src);
      popupThumbs.appendChild(img);
    });

    popup.classList.add("is-open");
  }
  popupClose.onclick = () => popup.classList.remove("is-open");
  popupBackdrop.onclick = () => popup.classList.remove("is-open");



  /* COLOR SELECT */
  document.querySelectorAll(".color-swatch").forEach(btn => {
    btn.onclick = () => {
      const val = btn.dataset.optionValue;

      document.querySelectorAll(".color-swatch").forEach(x=>x.classList.remove("is-active"));
      btn.classList.add("is-active");

      selectedOptions[0] = val;

      const newVar = product.variants.find(v =>
        JSON.stringify(v.options) === JSON.stringify(selectedOptions)
      );

      if(newVar){
        currentVariant = newVar;
        mainImg.src = clean(newVar.featured_media.preview_image.src);
        variantIdInput.value = newVar.id;
      }
    };
  });



  /* SIZE SELECT */
  document.querySelectorAll(".size-pill").forEach(btn => {
    btn.onclick = () => {
      const val = btn.dataset.optionValue;

      document.querySelectorAll(".size-pill").forEach(x=>x.classList.remove("is-active"));
      btn.classList.add("is-active");

      selectedOptions[1] = val;

      const newVar = product.variants.find(v =>
        JSON.stringify(v.options) === JSON.stringify(selectedOptions)
      );

      if(newVar){
        currentVariant = newVar;
        variantIdInput.value = newVar.id;
      }
    }
  });



  /* SIZE CHART */
  const sizeChart = document.getElementById("SizeChartModal");
  const sizeBtn = document.getElementById("SizeChartButton");
  const sizeClose = document.getElementById("SizeChartClose");
  const sizeBackdrop = document.querySelector(".size-chart-backdrop");

  sizeBtn.onclick = ()=> sizeChart.classList.add("is-open");
  sizeClose.onclick = ()=> sizeChart.classList.remove("is-open");
  sizeBackdrop.onclick = ()=> sizeChart.classList.remove("is-open");


});
</script>
