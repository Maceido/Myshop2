<section class="home-hero">
  <h1>Shop everyday essentials without the sketchy vibes</h1>
  <p>Curated products across electronics, home, pets, sports, and more, shipped from trusted partners.</p>
  <a href="/collections/all" class="btn btn-primary">Start shopping</a>
</section>

<section class="home-featured">
  <h2>Featured products</h2>
  {% assign featured_collection = collections['frontpage'] | default: collections['all'] %}
  {% if featured_collection and featured_collection.products_count > 0 %}
    <div class="product-grid">
      {% for product in featured_collection.products limit: 8 %}
        <div class="product-card">
          <a href="{{ product.url }}">
            {% if product.featured_image %}
              <img src="{{ product.featured_image | img_url: '360x' }}" alt="{{ product.title }}">
            {% endif %}
            <h3>{{ product.title }}</h3>
            <p>{{ product.price | money }}</p>
          </a>
        </div>
      {% endfor %}
    </div>
  {% else %}
    <p>No products available yet.</p>
  {% endif %}
</section>
