<!doctype html>
<html lang="{{ request.locale.iso_code }}">
<head>
  <meta charset="utf-8">

  <title>
    {% if page_title %}
      {{ page_title }} - 
    {% endif %}
    {{ shop.name }}
  </title>

  {{ 'theme.css' | asset_url | stylesheet_tag }}
  {{ content_for_header }}
</head>

<body>

  <!-- TOP NAVBAR (Amazon-style) -->
    <div class="top-nav">

    <!-- LEFT: Logo + Location -->
    <div class="nav-left">
        <a href="/" class="nav-logo">
        <img src="{{ 'gents.png' | asset_url }}" class="nav-gents-logo">
        </a>
        <button class="nav-location">Set delivery location</button>
    </div>

    <!-- MIDDLE: Search -->
    <form action="/search" method="get" class="nav-search">
        <input type="search" name="q" placeholder="Search products">
        <button type="submit">Search</button>
    </form>

    <!-- RIGHT: Language + Links -->
    <div class="nav-right">
        <select id="LangSelect">
        <option value="EN">EN</option>
        <option value="ES">ES</option>
        </select>

        <a href="/account">My Account</a>
        <a href="/orders">Orders</a>
        <a href="/cart">Cart ({{ cart.item_count }})</a>
    </div>

    </div>

  </header>

  <!-- PAGE LAYOUT (Left sidebar + main content) -->
  <div class="layout">

    <!-- SIDEBAR (categories only) -->
    <aside class="sidebar">

      <nav class="sidebar-menu">
        {% render 'sidebar-menu' %}
      </nav>

    </aside>


    <!-- MAIN CONTENT -->
    <main class="content">
      {{ content_for_layout }}
    </main>

  </div>


</body>
</html>
